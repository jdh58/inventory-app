extends layout 


block content

  h1= title 
  
  h2= item.name 
  h3= item.description 
  h4 $#{item.price}.00

  p We have #{item.instock} in stock currently.

  p This item is in the 
    a(href=item.category.url)= item.category.name.toLowerCase()
    span  category.

  li 
    a(href=item.url + '/update') Update Item
  li 
    a(href=item.url + '/delete') Delete Item