extends layout 

block content 

  h1= title 

  form(action="" method="POST")
    label(for="name") Name:
    input(type="text" id="name" name="name" maxLength=100 required="true" value=(item===undefined ? null : item.name))
    label(for="description") Description:
    input(type="text" id="description" name="description" maxLength=280 required="true" value=(item===undefined ? null : item.description))
    label(for="category") Category:
      select(id="category" name="category")
        for category in categories 
          option(category._id selected=(item!==undefined && category._id===item.category ? "true" : null )) #{category.name} 
    label(for="price") Price:
    input(type="number" id="price" name="price" min=0 required="true" value=(item===undefined ? null : item.price))
    label(for="instock") Quantity in stock:
    input(type="number" id="instock" name="instock" min=0 required="true" value=(item===undefined ? null : item.instock))

    button(type="submit") Submit


  if errors 
    for error in errors
      li= error.msg